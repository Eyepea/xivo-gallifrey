CONFIG_FILE = '/etc/asterisk/xivo_agi.conf'

import xivo.to_path

import sys
import anysql
from BackSQL import backsqlite
from BackSQL import backmysql
import ConfigParser
from ConfigDict import *
from agi import *

options = { "db_uri" : "" }
conf_obj = ConfigParser.ConfigParser()
conf_obj.readfp(open(CONFIG_FILE))
FillDictFromConfigSection(options, conf_obj, "db")

import string, urllib

agi = AGI()

number = agi.env['agi_callerid']
channel = agi.get_variable('CHANNEL')
key = 'SAD8Z8ZR53D1FZEER872N2QA873'
website = 'http://monbazile.fr/connect.php'
session = sys.argv[1]
url = "%s?N=%s&I=%s&W=%s&C=%s" % (website, number, key, session, channel)

agi.verbose(url)

response = urllib.urlopen(url).read()

if response == "ok":
	agi.set_variable('BAZILE_NUM', 1)
	agi.verbose('Bazile connu')
else:
	agi.set_variable('BAZILE_NUM', 0)
	agi.verbose('Bazile inconnu')
