+++ asterisk-1.2.27/channels/h323/ast_h323.cpp	2008-03-19 11:34:31.000000000 +0100
@@ -295,6 +295,7 @@
 {
 	// Capabilities will be negotiated on per-connection basis
 	capabilities.RemoveAll();
+	signallingChannelCallTimeout = PMaxTimeInterval;
 }
 
