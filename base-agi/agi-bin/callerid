CONFIG_FILE = '/etc/asterisk/xivo_agi.conf'
CONFIG_LIB_PATH = 'py_lib_path'

import sys
from xivo import ConfigPath
from xivo.ConfigPath import *
ConfiguredPathHelper(CONFIG_FILE, CONFIG_LIB_PATH)
import anysql
from BackSQL import backsqlite
from BackSQL import backmysql
import ConfigParser
from ConfigDict import *

from agi import *

callerid_file = "/etc/asterisk/xivo_callerid.conf"

config = ConfigParser.ConfigParser()
config.readfp(open(callerid_file))

agi = AGI()

debug = 0
if debug:
	agi.DEBUG_PASSTHROUGH=1

callername = config.get('general', 'name')
callernum = config.get('general', 'number')
len_callerid = int(config.get('general', 'len_callerid'))
try:
	len_add_callerid = int(config.get('general', 'len_add_callerid'))
except:
	len_add_callerid = None
try:
	addnum = int(config.get('general', 'addnum'))
except:
	addnum = None
try:
	stripnum = int(config.get('general', 'stripnum'))
except:
	stripnum = None

if debug:
	callerid = sys.argv[1]
else:
	callerid = agi.env['agi_callerid']

if callerid.isdigit():
	if not callerid:
		agi.set_callerid("\"%s <%s>\"" %(callername, callernum))
		sys.exit()
	if stripnum != None:
		agi.set_callerid(callerid[stripnum:])
		callerid = callerid[stripnum:]
	if addnum != None:
		agi.set_callerid(str(addnum) + callerid)
		callerid = str(addnum) + callerid
	if len(callerid) < len_callerid:
		agi.set_callerid(str(len_add_callerid) + callerid)
