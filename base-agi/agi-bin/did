CONFIG_FILE = '/etc/asterisk/xivo_agi.conf'
CONFIG_LIB_PATH = 'py_lib_path'

import sys
from xivo import ConfigPath
from xivo.ConfigPath import *
ConfiguredPathHelper(CONFIG_FILE, CONFIG_LIB_PATH)
import anysql
from BackSQL import backsqlite
from BackSQL import backmysql
import ConfigParser
from ConfigDict import *
from agi import *

options = { "db_uri" : "" }
conf_obj = ConfigParser.ConfigParser()
conf_obj.readfp(open(CONFIG_FILE))
FillDictFromConfigSection(options, conf_obj, "db")

import string

agi = AGI()

try:
	exten = sys.argv[1]
except:
	agi.verbose("Error no args found!")
	sys.exit()

try:
	conn = anysql.connect_by_uri(options['db_uri'])
except:
        agi.verbose("Unable to connect to %s" %options['db_uri'])
        raise

cursor = conn.cursor()
query = "SELECT type,typeid,custom FROM didfeatures WHERE commented=0 and number='%s'" % exten
cursor.execute(query)
t = cursor.fetchone()

if not t:
	agi.verbose("No DID found !")
	sys.exit()

type = t[0]
typeid = t[1]

if type == 'custom':
	if len(t.custom) < 3 or t.custom[0] == '(' or t.custom[-1] != ')':
		agi.verbose('Error wrong custom application')
		sys.exit()

	pos = t.custom.find('(')
	args = t.custom[pos+1:-1].replace(',','|')

	agi.answer()
	agi.appexec(t.custom[:pos],args)

if type == 'meetme':
	query = "SELECT number FROM meetmefeatures WHERE id=%d" % t[1]
	cursor.execute(query)
	m = cursor.fetchone()
	query = "SELECT number,context FROM extenumbers WHERE number='%s' AND context!='did-extensions'" % m[0]
	cursor.execute(query)
	g = cursor.fetchone()
	if g:
		number = g[0]
		context = g[1]
		agi.answer()
		agi.appexec("GOTO", "%s|%s|1" %(context,number))
	else:
		agi.verbose('Error : No number found for this meetme')
		sys.exit()

if type == 'user':
	query = "SELECT number,context FROM userfeatures WHERE id=%d" % typeid
	cursor.execute(query)
	u = cursor.fetchone()
	query = "SELECT number,context FROM extenumbers WHERE number='%s' AND context='%s'" %(u[0], u[1])
	cursor.execute(query)
	g = cursor.fetchone()
	if g:
		number = g[0]
		context = g[1]
		agi.answer()
		agi.appexec("GOTO", "%s|%s|1" %(context,number))
	else:
		agi.verbose('Error : No number found for this user')
		sys.exit()

if type == 'group':
	query = "SELECT number,context FROM groupfeatures WHERE id=%d AND context!='did-extensions'" % typeid
	cursor.execute(query)
	g = cursor.fetchone()
	if g:
		number = g[0]
		context = g[1]
		agi.answer()
		agi.appexec("GOTO", "%s|%s|1" %(context,number))
	else:
		agi.verbose('Error : No number found for this group')
		sys.exit()
