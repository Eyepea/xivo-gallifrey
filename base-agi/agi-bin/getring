import xivo.to_path

import sys
import ConfigParser
from ConfigDict import *
from agi import *
import agitb

ring = "/etc/asterisk/xivo_ring.conf"

parser = ConfigParser.RawConfigParser()
parser.readfp(open(ring))

agi = AGI()
agitb.enable(agi)

srcnum = agi.get_variable('REAL_SRCNUM')
dstnum = agi.get_variable('REAL_DSTNUM')
context = agi.get_variable('REAL_CONTEXT')
calltype = agi.get_variable('REAL_CALLTYPE')

try:
	phonetype = parser.get('number', "%s@%s" % (dstnum, context))
except ConfigParser.NoOptionError:
	agi.verbose("Using the phone ring tone")
	sys.exit()

ringtype = parser.get(phonetype, calltype)
agi.set_variable('XIVO_RINGTYPE', ringtype)
agi.verbose("Using ring tone %s" % ringtype)

if phonetype == 'thomson':
	agi.set_variable("ISTHOMSON", "1")
