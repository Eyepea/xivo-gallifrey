CONFIG_FILE = '/etc/asterisk/xivo_agi.conf'
CONFIG_LIB_PATH = 'py_lib_path'

import sys, string
from xivo import ConfigPath
from xivo.ConfigPath import *
ConfiguredPathHelper(CONFIG_FILE, CONFIG_LIB_PATH)
import ConfigParser
from ConfigDict import *
from agi import *

if len(sys.argv) > 1:
	if sys.argv[1].isdigit():
		exten = sys.argv[1]
else:
	agi_verbose("Sorry there is not number")
	sys.exit()

ring = "/etc/asterisk/xivo_ring.conf"

config = ConfigParser.ConfigParser()
config.readfp(open(ring))

phonetype = config.get('number', exten)

agi_set_variable("RINGINTERNAL", config.get(phonetype, 'intern'))
agi_set_variable("RINGEXTERNAL", config.get(phonetype, 'extern'))
agi_set_variable("RINGGROUP", config.get(phonetype, 'group'))

if phonetype == 'thomson':
	agi_set_variable("ISTHOMSON", "1")
