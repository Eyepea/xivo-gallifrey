CONFIG_FILE = '/etc/asterisk/xivo_agi.conf'

import xivo.to_path

import sys
import anysql
from BackSQL import backsqlite
from BackSQL import backmysql
import ConfigDict

if len(sys.argv) != 4:
        raise ValueError, "Missing args!"

db_uri = ConfigDict.ReadSingleKey(CONFIG_FILE, 'db', 'db_uri')
conn = anysql.connect_by_uri(db_uri)

context = sys.argv[1]
mailbox = sys.argv[2]
password = sys.argv[3]

cursor = conn.cursor()
cursor.query("UPDATE uservoicemail SET password='%s' WHERE context='%s' AND mailbox='%s'" % (password, context, mailbox))
conn.commit()
