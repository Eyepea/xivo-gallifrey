import xivo.to_path

import sys
import xivo_helpers

if len(sys.argv) != 4:
	raise ValueError, "Missing args!"

context = sys.argv[1]
mailbox = sys.argv[2]
password = sys.argv[3]

cursor = xivo_helpers.db_connect().cursor()
cursor.query("UPDATE uservoicemail SET password='%s' WHERE context='%s' AND mailbox='%s'" % (password, context, mailbox))
xivo_helpers.db_close()
