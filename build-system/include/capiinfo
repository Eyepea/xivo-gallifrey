CAPIINFO_SOURCE="isdn4k-utils-CVS-2006-08-17.tar.bz2"
CAPIINFO_URL="ftp://ftp.isdn4linux.de/pub/isdn4linux/CVS-Snapshots/$CAPIINFO_SOURCE"
CAPIINFO_SIZE="6104599"
CAPIINFO_SHA1SUM="e9a5126cf07578b83f78b481270964cd85e6bc0f"

# usage: capiinfo_build
capiinfo_build()
{
  cd capiinfo
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --sysconfdir=$SYSROOT/etc \
  do_make
}

# usage: capiinfo_install
capiinfo_install()
{
  cd capiinfo
  do_make install
}

# usage: make_capiinfo
make_capiinfo()
{
  get_basename $CAPIINFO_SOURCE
  use_extended_path
  build_dir="$BASENAME-capiinfo"
  make_package $CAPIINFO_SOURCE $CAPIINFO_URL $CAPIINFO_SIZE $CAPIINFO_SHA1SUM \
               $BASENAME capiinfo_build capiinfo_install
  use_simple_path
}
