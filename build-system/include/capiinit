CAPIINIT_SOURCE="isdn4k-utils-CVS-2006-08-17.tar.bz2"
CAPIINIT_URL="ftp://ftp.isdn4linux.de/pub/isdn4linux/CVS-Snapshots/$CAPIINIT_SOURCE"
CAPIINIT_SIZE="6104599"
CAPIINIT_SHA1SUM="e9a5126cf07578b83f78b481270964cd85e6bc0f"

# usage: capiinit_build
capiinit_build()
{
  cd capiinit
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --sysconfdir=$SYSROOT/etc \
  do_make
}

# usage: capiinit_install
capiinit_install()
{
  cd capiinit
  do_make install
}

# usage: make_capiinit
make_capiinit()
{
  get_basename $CAPIINIT_SOURCE
  use_extended_path
  build_dir="$BASENAME-capiinit"
  make_package $CAPIINIT_SOURCE $CAPIINIT_URL $CAPIINIT_SIZE $CAPIINIT_SHA1SUM \
               $BASENAME capiinit_build capiinit_install
  use_simple_path
}
