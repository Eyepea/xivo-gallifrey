CHAN_CAPI_SOURCE="chan_capi-0.7.0.tar.gz"
CHAN_CAPI_URL="ftp://ftp.chan-capi.org/chan-capi/$CHAN_CAPI_SOURCE"
CHAN_CAPI_SIZE="258275"
CHAN_CAPI_SHA1SUM="133f16ab1ad5981271270a99f78f162f2f961ffd"

CHAN_CAPI_XIVO_PATCH="chan_capi-0.7.0_xivo.patch"

# usage: chan_capi_build
chan_capi_build()
{
  apply_patch $CHAN_CAPI_XIVO_PATCH
  do_make CC=gcc OSNAME=Linux PROC=$ARCH INSTALL_PREFIX=$SYSROOT
}

# usage: chan_capi_install
chan_capi_install()
{
  do_make CC=gcc OSNAME=Linux PROC=$ARCH INSTALL_PREFIX=$SYSROOT install
  #install -m 644 $SYSCONFDIR/chan_capi/chan_capi.conf $SYSCONF/etc/asterisk
}

# usage: make_chan_capi
make_chan_capi()
{
  make_asterisk
  make_capi

  use_extended_path
  get_basename $CHAN_CAPI_SOURCE
  make_package $CHAN_CAPI_SOURCE $CHAN_CAPI_URL $CHAN_CAPI_SIZE $CHAN_CAPI_SHA1SUM \
               $BASENAME chan_capi_build chan_capi_install
  use_simple_path
}
