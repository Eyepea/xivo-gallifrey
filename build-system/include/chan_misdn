CHAN_MISDN_SOURCE="chan_misdn-0.4.0-rc4.tar.gz"
CHAN_MISDN_URL="http://www.beronet.com/download/chan_misdn/releases/V0.4/candidates/$CHAN_MISDN_SOURCE"
CHAN_MISDN_SIZE="84849"
CHAN_MISDN_SHA1SUM="8c4ee7acd88d0a6d2cbe26445079faa0eb21612a"

CHAN_MISDN_XIVO_PATCH="chan_misdn_xivo.patch"

# usage: chan_misdn_build
chan_misdn_build()
{
  apply_patch $CHAN_MISDN_XIVO_PATCH
  cd misdn
  echo "DEBUG: PATH=$PATH"
  read line
  do_make CC=gcc
  cd ..
  do_make CC=gcc INSTALL_PREFIX=$SYSROOT
}

# usage: chan_misdn_install
chan_misdn_install()
{
  do_make CC=gcc INSTALL_PREFIX=$SYSROOT install
}

# usage: make_chan_misdn
make_chan_misdn()
{
  make_misdn
  make_misdnuser
  make_asterisk

  use_extended_path
  make_package $CHAN_MISDN_SOURCE $CHAN_MISDN_URL $CHAN_MISDN_SIZE $CHAN_MISDN_SHA1SUM \
               "chan_misdn" chan_misdn_build chan_misdn_install
  use_simple_path
}
