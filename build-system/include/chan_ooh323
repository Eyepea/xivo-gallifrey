CHAN_OOH323_SOURCE="asterisk-addons-1.2.4.tar.gz"
CHAN_OOH323_URL="http://ftp.digium.com/pub/asterisk/releases/$CHAN_OOH323_SOURCE"
CHAN_OOH323_SIZE="755656"
CHAN_OOH323_SHA1SUM="62708981225f271a994d4d1f071a2ad64574141f"

CHAN_OOH323_UCLIBC_PATCH="chan_ooh323_uclibc.patch"

# usage: chan_ooh323_build
chan_ooh323_build()
{
  if [ "$USE_UCLIBC" ]; then
    apply_patch $CHAN_OOH323_UCLIBC_PATCH
  fi

  cd asterisk-ooh323c
  ac_cv_func_malloc_0_nonnull=yes \
  ac_cv_file__usr_include_asterisk_channel_h=yes \
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=/usr \
              --disable-dependency-tracking \
              --disable-static
  make
}

# usage: chan_ooh323_install
chan_ooh323_install()
{
  cd asterisk-ooh323c
  make DESTDIR=$SYSROOT install
  install -m 644 $SYSCONFDIR/chan_ooh323/ooh323.conf $SYSCONF/etc/asterisk
}

# usage: make_chan_ooh323
make_chan_ooh323()
{
  make_asterisk

  get_basename $CHAN_OOH323_SOURCE
  use_extended_path
  build_dir="$BASENAME-chan_ooh323"
  make_package $CHAN_OOH323_SOURCE $CHAN_OOH323_URL $CHAN_OOH323_SIZE $CHAN_OOH323_SHA1SUM \
               $BASENAME chan_ooh323_build chan_ooh323_install
  use_simple_path
}
