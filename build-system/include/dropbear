DROPBEAR_SOURCE="dropbear-0.48.1.tar.gz"
DROPBEAR_URL="http://matt.ucc.asn.au/dropbear/releases/$DROPBEAR_SOURCE"
DROPBEAR_SIZE="1473114"
DROPBEAR_SHA1SUM="4dd349b5e3c1aa1b627c52a27f17f5eb7e85c146"

DROPBEAR_UCLIBC_PATCH="dropbear-0.48.1_uclibc.patch"

# usage: dropbear_build
dropbear_build()
{
  if [ "$USE_UCLIBC" ]; then
    apply_patch $DROPBEAR_UCLIBC_PATCH
  fi

  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr
  do_make
}

# usage: dropbear_install
dropbear_install()
{
  do_make install
  install_rc_script $SYSCONFDIR/dropbear/dropbear

  # Create an empty directory which will be used to hold rsa/dss keys.
  # Those keys are generated at first startup (or when they have been
  # removed).
  ln -s /mnt/dropbear $SYSROOT/etc/dropbear
  mkdir -m 755 $SYSCONF/dropbear
}

# usage: make_dropbear
make_dropbear()
{
  make_zlib

  get_basename $DROPBEAR_SOURCE
  make_package $DROPBEAR_SOURCE $DROPBEAR_URL $DROPBEAR_SIZE $DROPBEAR_SHA1SUM \
               $BASENAME dropbear_build dropbear_install
}
