FILE_SOURCE="file-4.17.tar.gz"
FILE_URL="ftp://ftp.gw.com/mirrors/pub/unix/file/$FILE_SOURCE"
FILE_SIZE="556270"
FILE_SHA1SUM="e03710a3fcb95db6d0ee9cfcdf88c19a5e525ee4"

FILE_UCLIBC_PATCH="file-4.17_uclibc.patch"

# usage: file_build
file_build()
{
  if [ "$USE_UCLIBC" ]; then
    apply_patch $FILE_UCLIBC_PATCH
  fi

  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --disable-dependency-tracking \
              --disable-static
  do_make
}

# usage: file_install
file_install()
{
  do_make install
}

# usage: make_file
make_file()
{
  make_zlib

  get_basename $FILE_SOURCE
  make_package $FILE_SOURCE $FILE_URL $FILE_SIZE $FILE_SHA1SUM \
               $BASENAME file_build file_install
}
