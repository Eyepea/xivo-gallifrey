GNUGK_SOURCE="gnugk-2.2.4.tar.gz"
GNUGK_URL="http://kent.dl.sourceforge.net/sourceforge/openh323gk/$GNUGK_SOURCE"
GNUGK_SIZE="938275"
GNUGK_SHA1SUM="a4fddc0b77314a16acdf3d1402c60aa51ca5873d"

GNUGK_CROSSCOMPILE_PATCH="gnugk-2.2.4_crosscompile.patch"

# usage: gnugk_build
gnugk_build()
{
  apply_patch $GNUGK_CROSSCOMPILE_PATCH

  CC=gcc \
  CXX=g++ \
  PWLIBDIR=$PWLIB_BUILD_DIR \
  OPENH323DIR=$OPENH323_BUILD_DIR \
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --sysconfdir=$SYSROOT/etc \
              --disable-radius \
              --disable-mysql \
              --disable-pgsql \
              --disable-firebird

  CC=gcc \
  CXX=g++ \
  do_make opt
}

# usage: gnugk_install
gnugk_install()
{
  do_make INSTALLBIN_DIR=$SYSROOT/usr/sbin install
  install_rc_script $SYSCONFDIR/gnugk/gnugk
  make_conf_file gnugk/gatekeeper.ini /etc 644
}

# usage: make_gnugk
make_gnugk()
{
  make_zlib
  make_openssl
  make_pwlib
  make_openh323

  get_basename $GNUGK_SOURCE
  use_extended_path
  make_package $GNUGK_SOURCE $GNUGK_URL $GNUGK_SIZE $GNUGK_SHA1SUM \
               $BASENAME gnugk_build gnugk_install
  use_simple_path
}
