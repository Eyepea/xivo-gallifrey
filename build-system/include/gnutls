GNUTLS_SOURCE="gnutls-1.0.25.tar.gz"
GNUTLS_URL="ftp://ftp.gnupg.org/gcrypt/alpha/gnutls/$GNUTLS_SOURCE"
GNUTLS_SIZE="1557142"
GNUTLS_SHA1SUM="e790b848b9aa1e98d8f28ecf522d8e5dc7e0cb0b"

# usage: gnutls_build
gnutls_build()
{
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --disable-static \
              --disable-nls \
              --disable-rpath \
              --with-included-opencdk \
              --with-included-libtasn1 \
              --with-included-libcfg \
              --with-included-lzo
  do_make
}

# usage: gnutls_install
gnutls_install()
{
  do_make install
}

# usage: make_gnutls
make_gnutls()
{
  make_zlib
  make_libgpg_error
  make_libgcrypt

  get_basename $GNUTLS_SOURCE
  make_package $GNUTLS_SOURCE $GNUTLS_URL $GNUTLS_SIZE $GNUTLS_SHA1SUM \
               $BASENAME gnutls_build gnutls_install
}
