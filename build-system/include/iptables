IPTABLES_SOURCE="iptables-1.3.5.tar.bz2"
IPTABLES_URL="ftp://ftp.netfilter.org/pub/iptables/$IPTABLES_SOURCE"
IPTABLES_SIZE="191820"
IPTABLES_SHA1SUM="6dbeeee13517fa02852960b6f6e51115c7548a09"

IPTABLES_DEPS_PATCH="iptables-1.3.5_deps.patch"

# usage: iptables_build
iptables_build()
{
  apply_patch $IPTABLES_DEPS_PATCH

  # The creation of libiptc/libiptc.a is not always correct when
  # using parallel building.
  do_make DO_IPV6=1 \
          DO_MULTI=1 \
          CC=$TARGET-gcc \
          PREFIX= \
          DESTDIR=$SYSROOT \
          KERNEL_DIR=$KERNEL_SOURCE \
          -j 1
}

# usage: iptables_install
iptables_install()
{
  do_make DO_IPV6=1 \
          DO_MULTI=1 \
          CC=$TARGET-gcc \
          PREFIX= \
          DESTDIR=$SYSROOT \
          KERNEL_DIR=$KERNEL_SOURCE \
          -j 1 \
          install
}

# usage: make_iptables
make_iptables()
{
  get_basename $IPTABLES_SOURCE
  use_extended_path
  make_package $IPTABLES_SOURCE $IPTABLES_URL $IPTABLES_SIZE $IPTABLES_SHA1SUM \
               $BASENAME iptables_build iptables_install
  use_simple_path
}
