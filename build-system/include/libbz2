LIBBZ2_SOURCE="bzip2-1.0.3.tar.gz"
LIBBZ2_URL="http://www.bzip.org/1.0.3/$LIBBZ2_SOURCE"
LIBBZ2_SIZE="669075"
LIBBZ2_SHA1SUM="7e749510f65c86fbfff37b97144a02f1b8b8617f"

# Build libbz2.
# 
# usage: make_libbz2
make_libbz2()
{
  pushd $SRC &> /dev/null
  download_source $LIBBZ2_URL $LIBBZ2_SOURCE $LIBBZ2_SIZE $LIBBZ2_SHA1SUM

  get_basename $LIBBZ2_SOURCE
  libbz2_src=$BASENAME
  libbz2_src_arch=$libbz2_src-$TARGET-build

  use_extended_path

  if [ ! -d $libbz2_src_arch ]; then
    extract $LIBBZ2_SOURCE
    mv $libbz2_src $libbz2_src_arch
    cd $libbz2_src_arch
    do_make -f Makefile-libbz2_so
  else
    cd $libbz2_src_arch
  fi

  cp -a bzlib.h $SYSROOT/usr/include
  cp -a libbz2.so* $SYSROOT/usr/lib
  ln -s libbz2.so.?.?.? $SYSROOT/usr/lib/libbz2.so
  use_simple_path
  popd &> /dev/null
}
