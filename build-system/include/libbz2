LIBBZ2_SOURCE="bzip2-1.0.3.tar.gz"
LIBBZ2_URL="http://www.bzip.org/1.0.3/$LIBBZ2_SOURCE"
LIBBZ2_SIZE="669075"
LIBBZ2_SHA1SUM="7e749510f65c86fbfff37b97144a02f1b8b8617f"

# usage: libbz2_build
libbz2_build()
{
  do_make -f Makefile-libbz2_so
}

# usage: libbz2_install
libbz2_install()
{
  cp -a bzlib.h $SYSROOT/usr/include
  cp -a libbz2.so* $SYSROOT/usr/lib
  ln -s libbz2.so.?.?.? $SYSROOT/usr/lib/libbz2.so
}

# usage: make_libbz2
make_libbz2()
{
  get_basename $LIBBZ2_SOURCE
  use_extended_path
  make_package $LIBBZ2_SOURCE $LIBBZ2_URL $LIBBZ2_SIZE $LIBBZ2_SHA1SUM \
               $BASENAME libbz2_build libbz2_install
  use_simple_path
}
