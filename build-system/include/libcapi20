LIBCAPI20_SOURCE="isdn4k-utils-CVS-2006-08-17.tar.bz2"
LIBCAPI20_URL="ftp://ftp.isdn4linux.de/pub/isdn4linux/CVS-Snapshots/$LIBCAPI20_SOURCE"
LIBCAPI20_SIZE="6104599"
LIBCAPI20_SHA1SUM="e9a5126cf07578b83f78b481270964cd85e6bc0f"

# usage: libcapi20_build
libcapi20_build()
{
  cd capi20
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --sysconfdir=$SYSROOT/etc \
              --disable-dependency-tracking \
              --disable-static
  do_make
}

# usage: libcapi20_install
libcapi20_install()
{
  cd capi20
  do_make install
}

# usage: make_libcapi20
make_libcapi20()
{
  get_basename $LIBCAPI20_SOURCE
  make_package $LIBCAPI20_SOURCE $LIBCAPI20_URL $LIBCAPI20_SIZE $LIBCAPI20_SHA1SUM \
               $BASENAME libcapi20_build libcapi20_install
}
