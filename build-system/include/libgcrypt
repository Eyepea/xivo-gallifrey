LIBGCRYPT_SOURCE="libgcrypt-1.2.2.tar.gz"
LIBGCRYPT_URL="ftp://ftp.gnupg.org/gcrypt/libgcrypt/$LIBGCRYPT_SOURCE"
LIBGCRYPT_SIZE="959875"
LIBGCRYPT_SHA1SUM="fdf3638c0de619343c5f2291a3e8b9fe610425ce"

LIBGCRYPT_DEPS_PATCH="libgcrypt-1.2.2_deps.patch"

# usage: libgcrypt_build
libgcrypt_build()
{
  apply_patch $LIBGCRYPT_DEPS_PATCH
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --disable-static \
              --disable-asm
  do_make
}

# usage: libgcrypt_install
libgcrypt_install()
{
  do_make install
}

# usage: make_libgcrypt
make_libgcrypt()
{
  make_libgpg_error

  get_basename $LIBGCRYPT_SOURCE
  make_package $LIBGCRYPT_SOURCE $LIBGCRYPT_URL $LIBGCRYPT_SIZE $LIBGCRYPT_SHA1SUM \
               $BASENAME libgcrypt_build libgcrypt_install
}
