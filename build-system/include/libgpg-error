LIBGPG_ERROR_SOURCE="libgpg-error-1.3.tar.bz2"
LIBGPG_ERROR_URL="ftp://ftp.gnupg.org/gcrypt/libgpg-error/$LIBGPG_ERROR_SOURCE"
LIBGPG_ERROR_SIZE="452266"
LIBGPG_ERROR_SHA1SUM="10bd8d8503b674e114ecc6620324d5d1c8c918b7"

LIBGPG_ERROR_NLS_PATCH="libgpg-error-1.3_nls.patch"

# usage: libgpg_error_build
libgpg_error_build()
{
  apply_patch $LIBGPG_ERROR_NLS_PATCH
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --disable-static \
              --disable-nls
  do_make
}

# usage: libgpg_error_install
libgpg_error_install()
{
  do_make install
}

# usage: make_libgpg_error
make_libgpg_error()
{
  get_basename $LIBGPG_ERROR_SOURCE
  make_package $LIBGPG_ERROR_SOURCE $LIBGPG_ERROR_URL $LIBGPG_ERROR_SIZE \
               $LIBGPG_ERROR_SHA1SUM $BASENAME libgpg_error_build libgpg_error_install
}
