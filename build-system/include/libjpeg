LIBJPEG_SOURCE="jpegsrc.v6b.tar.gz"
LIBJPEG_URL="http://www.ijg.org/files/$LIBJPEG_SOURCE"
LIBJPEG_SIZE="613261"
LIBJPEG_SHA1SUM="7079f0d6c42fad0cfba382cf6ad322add1ace8f9"

LIBJPEG_UCLIBC_CROSSCOMPILE_PATCH="libjpeg-6b_uclibc_crosscompile.patch"

# usage: libjpeg_build
libjpeg_build()
{
  apply_patch $LIBJPEG_UCLIBC_CROSSCOMPILE_PATCH
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --enable-shared \
              --disable-static
  do_make
}

# usage: libjpeg_install
libjpeg_install()
{
  do_make install
}

# usage: make_libjpeg
make_libjpeg()
{
  use_extended_path
  make_package $LIBJPEG_SOURCE $LIBJPEG_URL $LIBJPEG_SIZE $LIBJPEG_SHA1SUM \
               "jpeg-6b" libjpeg_build libjpeg_install
  use_simple_path
}
