LIBPNG_SOURCE="libpng-1.2.12.tar.bz2"
LIBPNG_URL="http://switch.dl.sourceforge.net/sourceforge/libpng/$LIBPNG_SOURCE"
LIBPNG_SIZE="621295"
LIBPNG_SHA1SUM="44bd6821607ba09ac500279363871ad5974a01b5"

LIBPNG_DEPS_PATCH="libpng-1.2.12_deps.patch"

# usage: libpng_build
libpng_build()
{
  apply_patch $LIBPNG_DEPS_PATCH
  ac_cv_func_memcmp_working=yes \
  ac_cv_have_decl_malloc=yes \
  gl_cv_func_malloc_0_nonnull=yes \
  ac_cv_func_malloc_0_nonnull=yes \
  ac_cv_func_calloc_0_nonnull=yes \
  ac_cv_func_realloc_0_nonnull=yes \
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --without-libpng-compat \
              --disable-static
  do_make
}

# usage: libpng_install
libpng_install()
{
  do_make install
}

# usage: make_libpng
make_libpng()
{
  make_zlib

  get_basename $LIBPNG_SOURCE
  make_package $LIBPNG_SOURCE $LIBPNG_URL $LIBPNG_SIZE $LIBPNG_SHA1SUM \
               $BASENAME libpng_build libpng_install
}
