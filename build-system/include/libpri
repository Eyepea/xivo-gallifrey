LIBPRI_SOURCE="libpri-1.2.3.tar.gz"
LIBPRI_URL="http://ftp.digium.com/pub/libpri/$LIBPRI_SOURCE"
LIBPRI_SIZE="76348"
LIBPRI_SHA1SUM="8142047002119ce76dfb85204606988be9114d2f"

LIBPRI_XIVO_PATCH="libpri-1.2.3_xivo.patch"

# usage: libpri_build
libpri_build()
{
  apply_patch $LIBPRI_XIVO_PATCH
  do_make OSARCH=Linux \
          PROC=$ARCH \
          DESTDIR=$SYSROOT
}

# usage: libpri_install
libpri_install()
{
  do_make OSARCH=Linux \
          PROC=$ARCH \
          DESTDIR=$SYSROOT \
          install
}

# usage: make_libpri
make_libpri()
{
  get_basename $LIBPRI_SOURCE
  use_extended_path
  make_package $LIBPRI_SOURCE $LIBPRI_URL $LIBPRI_SIZE $LIBPRI_SHA1SUM \
               $BASENAME libpri_build libpri_install
  use_simple_path
}
