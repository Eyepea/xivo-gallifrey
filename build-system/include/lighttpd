LIGHTTPD_SOURCE="lighttpd-1.4.11.tar.gz"
LIGHTTPD_URL="http://mirrors.cat.pdx.edu/lighttpd/$LIGHTTPD_SOURCE"
LIGHTTPD_SIZE="781656"
LIGHTTPD_SHA1SUM="ca904d3d4d9dde76f85156f2c709a394f30e28c8"

# usage: lighttpd_build
lighttpd_build()
{
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --sysconfdir=$SYSROOT/etc \
              --disable-dependency-tracking \
              --disable-static \
              --with-openssl
  do_make
}

# usage: lighttpd_install
lighttpd_install()
{
  do_make install
  install_rc_script $SYSCONFDIR/lighttpd/lighttpd
  make_conf_file lighttpd/lighttpd.conf /etc 644
}

# usage: make_lighttpd
make_lighttpd()
{
  make_zlib
  make_openssl

  get_basename $LIGHTTPD_SOURCE
  make_package $LIGHTTPD_SOURCE $LIGHTTPD_URL $LIGHTTPD_SIZE $LIGHTTPD_SHA1SUM \
               $BASENAME lighttpd_build lighttpd_install
}
