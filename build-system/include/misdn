MISDN_SOURCE="mISDN_for-3.4.tar.gz"
MISDN_URL="http://isdn.jolly.de/download/v3.4/$MISDN_SOURCE"
MISDN_SIZE="435364"
MISDN_SHA1SUM="5e251f14472b4a13a680b7d055f73a45b091d430"

MISDN_XIVO_PATCH="misdn_xivo.patch"

# usage: misdn_build
misdn_build()
{
  apply_patch $MISDN_XIVO_PATCH
  do_make CROSS_COMPILE=$TARGET- INSTALL_PREFIX=$SYSROOT LINUX=$KERNEL_SOURCE
}

# usage: misdn_install
misdn_install()
{
  MISDN_BUILD_DIR=$build_dir

  do_make CROSS_COMPILE=$TARGET- INSTALL_PREFIX=$SYSROOT LINUX=$KERNEL_SOURCE install
  install_rc_script $SYSCONFDIR/misdn/misdn 16 00
}

# usage: make_misdn
make_misdn()
{
  make_package $MISDN_SOURCE $MISDN_URL $MISDN_SIZE $MISDN_SHA1SUM \
               "mISDN" misdn_build misdn_install
}
