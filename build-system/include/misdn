MISDN_SOURCE="mISDN-CVS-2006-08-26.tar.bz2"
MISDN_URL="ftp://ftp.isdn4linux.de/pub/isdn4linux/CVS-Snapshots/mISDN-CVS-2006-08-26.tar.bz2"
MISDN_SIZE="364400"
MISDN_SHA1SUM="cd8b28ee2f846f1521ba1a37875d15970d84c673"

MISDN_XIVO_PATCH="misdn_xivo.patch"

# usage: misdn_build
misdn_build()
{
  apply_patch $MISDN_XIVO_PATCH
  do_make CROSS_COMPILE=$TARGET- \
          INSTALL_PREFIX=$SYSROOT \
          LINUX=$KERNEL_SOURCE \
          LINUX_SOURCE=$KERNEL_SOURCE
}

# usage: misdn_install
misdn_install()
{
  MISDN_BUILD_DIR=$build_dir

  do_make CROSS_COMPILE=$TARGET- \
          INSTALL_PREFIX=$SYSROOT \
          LINUX=$KERNEL_SOURCE \
          LINUX_SOURCE=$KERNEL_SOURCE \
          install
  install_rc_script $SYSCONFDIR/misdn/misdn 16 00
}

# usage: make_misdn
make_misdn()
{
  get_basename $MISDN_SOURCE
  make_package $MISDN_SOURCE $MISDN_URL $MISDN_SIZE $MISDN_SHA1SUM \
               $BASENAME misdn_build misdn_install
}
