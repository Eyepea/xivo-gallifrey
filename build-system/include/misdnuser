MISDNUSER_SOURCE="mISDNuser-CVS-2006-08-17.tar.bz2"
MISDNUSER_URL="ftp://ftp.isdn4linux.de/pub/isdn4linux/CVS-Snapshots/$MISDNUSER_SOURCE"
MISDNUSER_SIZE="166482"
MISDNUSER_SHA1SUM="75698a213cd23a61f84681a6c092828781054e7d"

MISDNUSER_XIVO_PATCH="misdnuser_xivo.patch"

# usage: misdnuser_build
misdnuser_build()
{
  apply_patch $MISDNUSER_XIVO_PATCH
  do_make CC=gcc MISDNDIR=$MISDN_BUILD_DIR INSTALL_PREFIX=$SYSROOT
}

# usage: misdnuser_install
misdnuser_install()
{
  do_make CC=gcc MISDNDIR=$MISDN_BUILD_DIR INSTALL_PREFIX=$SYSROOT install
}

# usage: make_misdnuser
make_misdnuser()
{
  make_ncurses
  make_misdn

  use_extended_path
  get_basename $MISDNUSER_SOURCE
  make_package $MISDNUSER_SOURCE $MISDNUSER_URL $MISDNUSER_SIZE $MISDNUSER_SHA1SUM \
               $BASENAME misdnuser_build misdnuser_install
  use_simple_path
}
