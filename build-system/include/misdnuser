MISDNUSER_SOURCE="mISDNuser_for-3.4.tar.gz"
MISDNUSER_URL="http://isdn.jolly.de/download/v3.4/$MISDNUSER_SOURCE"
MISDNUSER_SIZE="1563592"
MISDNUSER_SHA1SUM="67264c98fcbaf5bc100f614df21c818ba60ac221"

MISDNUSER_XIVO_PATCH="misdnuser_xivo.patch"

# usage: misdnuser_build
misdnuser_build()
{
  apply_patch $MISDNUSER_XIVO_PATCH
  do_make CC=gcc MISDNDIR=$MISDN_BUILD_DIR INSTALL_PREFIX=$SYSROOT
}

# usage: misdnuser_install
misdnuser_install()
{
  do_make CC=gcc MISDNDIR=$MISDN_BUILD_DIR INSTALL_PREFIX=$SYSROOT install
}

# usage: make_misdnuser
make_misdnuser()
{
  make_misdn

  use_extended_path
  make_package $MISDNUSER_SOURCE $MISDNUSER_URL $MISDNUSER_SIZE $MISDNUSER_SHA1SUM \
               "mISDNuser" misdnuser_build misdnuser_install
  use_simple_path
}
