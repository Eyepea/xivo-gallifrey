MTD_UTILS_SOURCE="mtd-utils-1.0.0.tar.gz"
MTD_UTILS_URL="ftp://ftp.infradead.org/pub/mtd-utils/$MTD_UTILS_SOURCE"
MTD_UTILS_SIZE="280041"
MTD_UTILS_SHA1SUM="5ae8b095eb452db4319af2db863b36d1c5d3d62f"

MTD_UTILS_XIVO_PATCH="mtd-utils-1.0.0_xivo.patch"

# usage: mtd_utils_build
mtd_utils_build()
{
  apply_patch $MTD_UTILS_XIVO_PATCH
  do_make CROSS=$TARGET-
}

# usage: mtd_utils_install
mtd_utils_install()
{
  do_make DESTDIR=$SYSROOT install
}

# usage: make_mtd_utils
make_mtd_utils()
{
  get_basename $MTD_UTILS_SOURCE
  use_extended_path
  make_package $MTD_UTILS_SOURCE $MTD_UTILS_URL $MTD_UTILS_SIZE $MTD_UTILS_SHA1SUM \
               $BASENAME mtd_utils_build mtd_utils_install
  use_simple_path
}
