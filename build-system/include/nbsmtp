NBSMTP_SOURCE="nbsmtp-1.00.tar.bz2"
NBSMTP_URL="http://www.gentoo-es.org/~ferdy/$NBSMTP_SOURCE"
NBSMTP_SIZE="104090"
NBSMTP_SHA1SUM="02a2a4967c06afd862f943e6594c08eed8c6674a"

# usage: nbsmtp_build
nbsmtp_build()
{
  CC=gcc \
  ac_cv_func_malloc_0_nonnull=yes \
  ac_cv_func_realloc_0_nonnull=yes \
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --sysconfdir=$SYSROOT/etc \
              --enable-ssl \
              --enable-ipv6
  CC=gcc do_make
}

# usage: nbsmtp_install
nbsmtp_install()
{
  do_make install
  make_conf_file nbsmtp/nbsmtprc /etc 644
}

# usage: make_nbsmtp
make_nbsmtp()
{
  make_openssl

  get_basename $NBSMTP_SOURCE
  use_extended_path
  make_package $NBSMTP_SOURCE $NBSMTP_URL $NBSMTP_SIZE $NBSMTP_SHA1SUM \
               $BASENAME nbsmtp_build nbsmtp_install
  use_simple_path
}
