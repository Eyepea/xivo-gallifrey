NCURSES_SOURCE="ncurses-5.5.tar.gz"
NCURSES_URL="http://ftp.gnu.org/pub/gnu/ncurses/$NCURSES_SOURCE"
NCURSES_SIZE="2314030"
NCURSES_SHA1SUM="46414a72e91a62f63a8c9af00f0d65497f5ecc5a"

# usage: ncurses_build
ncurses_build()
{
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=/usr \
              --with-install-prefix=$SYSROOT \
              --with-shared \
              --without-normal \
              --without-debug \
              --disable-database \
              --disable-home-terminfo \
              --disable-macros \
              --with-fallbacks=linux,vt100,xterm,rxvt \
              --enable-warnings
  do_make
}

# usage: ncurses_install
ncurses_install()
{
  do_make install.includes
  do_make install.libs
}

# usage: make_ncurses
make_ncurses()
{
  get_basename $NCURSES_SOURCE
  make_package $NCURSES_SOURCE $NCURSES_URL $NCURSES_SIZE $NCURSES_SHA1SUM \
               $BASENAME ncurses_build ncurses_install
}
