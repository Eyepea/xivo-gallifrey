OPENSSL_SOURCE="openssl-0.9.8b.tar.gz"
OPENSSL_URL="http://calrissian/$OPENSSL_SOURCE"
OPENSSL_SIZE="3279283"
OPENSSL_SHA1SUM="99565db630a044fa484d4f91006a31908f262246"

# Build openssl.
# 
# usage: make_openssl
make_openssl()
{
  pushd $SRC &> /dev/null
  download_source $OPENSSL_URL $OPENSSL_SOURCE $OPENSSL_SIZE $OPENSSL_SHA1SUM

  get_basename $OPENSSL_SOURCE
  openssl_src=$BASENAME
  openssl_src_arch=$openssl_src-$TARGET-build

  use_extended_path

  if [ ! -d $openssl_src_arch ]; then
    extract $OPENSSL_SOURCE
    mv $openssl_src $openssl_src_arch
    cd $openssl_src_arch
    ./Configure --prefix=/usr \
                --openssldir=/etc/ssl \
                --install_prefix=$SYSROOT \
                threads shared zlib-dynamic no-asm linux-elf

    # It looks like OpenSSL doesn't support parallel builds correctly.
    do_make -j 1
  else
    cd $openssl_src_arch
  fi

  do_make install -j 1
  use_simple_path
  popd &> /dev/null
}
