OPENSSL_SOURCE="openssl-0.9.8b.tar.gz"
OPENSSL_URL="http://www.openssl.org/source/$OPENSSL_SOURCE"
OPENSSL_SIZE="3279283"
OPENSSL_SHA1SUM="99565db630a044fa484d4f91006a31908f262246"

# usage: openssl_build
openssl_build()
{
  ./Configure --prefix=/usr \
              --openssldir=/etc/ssl \
              --install_prefix=$SYSROOT \
              threads shared zlib-dynamic no-asm linux-elf

  # It looks like OpenSSL doesn't support parallel builds correctly.
  do_make -j 1
}

# usage: openssl_install
openssl_install()
{
  do_make install_sw -j 1
}

# usage: make_openssl
make_openssl()
{
  make_zlib

  get_basename $OPENSSL_SOURCE
  use_extended_path
  make_package $OPENSSL_SOURCE $OPENSSL_URL $OPENSSL_SIZE $OPENSSL_SHA1SUM \
               $BASENAME openssl_build openssl_install
  use_simple_path
}
