PHP_FILEINFO_SOURCE="Fileinfo-1.0.3.tgz"
PHP_FILEINFO_URL="http://pecl.php.net/get/$PHP_FILEINFO_SOURCE"
PHP_FILEINFO_SIZE="5727"
PHP_FILEINFO_SHA1SUM="220b6872777cf89dd67a9952259083c3183d1327"

# usage: php_fileinfo_build
php_fileinfo_build()
{
  $SYSROOT/usr/bin/phpize
  ./configure --build=$BUILD \
              --host=$TARGET \
              --with-php-config=$SYSROOT/usr/bin/php-config \
              --enable-shared \
              --disable-static \
              --with-fileinfo=$SYSROOT/usr \
              --with-pic
  do_make
}

# usage: php_fileinfo_install
php_fileinfo_install()
{
  do_make install
  echo "extension=fileinfo.so" >> $SYSCONF/php/php.ini
}

# usage: make_php_fileinfo
make_php_fileinfo()
{
  make_file
  make_php

  get_basename $PHP_FILEINFO_SOURCE
  use_extended_path
  make_package $PHP_FILEINFO_SOURCE $PHP_FILEINFO_URL $PHP_FILEINFO_SIZE \
               $PHP_FILEINFO_SHA1SUM $BASENAME php_fileinfo_build php_fileinfo_install
  use_simple_path
}
