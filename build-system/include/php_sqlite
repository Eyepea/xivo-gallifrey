PHP_SQLITE_SOURCE="SQLite-1.0.3.tgz"
PHP_SQLITE_URL="http://pecl.php.net/get/$PHP_SQLITE_SOURCE"
PHP_SQLITE_SIZE="371189"
PHP_SQLITE_SHA1SUM="338333183875deb74956b37a8d58e2659d47a501"

# usage: php_sqlite_build
php_sqlite_build()
{
  $SYSROOT/usr/bin/phpize
  ./configure --build=$BUILD \
              --host=$TARGET \
              --with-php-config=$SYSROOT/usr/bin/php-config \
              --enable-shared \
              --disable-static \
              --with-pic
  do_make
}

# usage: php_sqlite_install
php_sqlite_install()
{
  do_make install
  echo "extension=sqlite.so" >> $SYSCONF/php/php.ini
}

# usage: make_php_sqlite
make_php_sqlite()
{
  make_php

  get_basename $PHP_SQLITE_SOURCE
  use_extended_path
  make_package $PHP_SQLITE_SOURCE $PHP_SQLITE_URL $PHP_SQLITE_SIZE $PHP_SQLITE_SHA1SUM \
               $BASENAME php_sqlite_build php_sqlite_install
  use_simple_path
}
