PWLIB_SOURCE="pwlib-v1_10_1-src-tar.gz"
PWLIB_URL="http://kent.dl.sourceforge.net/sourceforge/openh323/$PWLIB_SOURCE"
PWLIB_SIZE="2078624"
PWLIB_SHA1SUM="0e7a2d9a671571320f7e232e15687e52597a5442"

PWLIB_UCLIBC_PATCH="pwlib-v1_10_1_uclibc.patch"

# usage: pwlib_build
pwlib_build()
{
  if [ "$USE_UCLIBC" ]; then
    apply_patch $PWLIB_UCLIBC_PATCH
  fi

  CC=gcc \
  CXX=g++ \
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=/usr \
              --sysconfdir=/etc \
              --enable-openh323 \
              --enable-configfile \
              --disable-plugins \
              --disable-sasl \
              --disable-openldap \
              --disable-expat \
              --disable-vxml \
              --disable-jabber \
              --disable-xmlrpc \
              --disable-soap \
              --disable-tts \
              --disable-sdl \
              --disable-video \
              --disable-socks \
              --disable-ftp \
              --disable-snmp \
              --disable-telnet \
              --disable-pop3smtp \
              --disable-audio \
              --disable-vidfile

  CC=gcc \
  CXX=g++ \
  do_make opt
}

# usage: pwlib_install
pwlib_install()
{
  PWLIB_BUILD_DIR=$build_dir
  do_make DESTDIR=$SYSROOT install
}

# usage: make_pwlib
make_pwlib()
{
  make_openssl

  use_extended_path
  make_package $PWLIB_SOURCE $PWLIB_URL $PWLIB_SIZE $PWLIB_SHA1SUM \
               "pwlib_Phobos_release2" pwlib_build pwlib_install
  use_simple_path
}
