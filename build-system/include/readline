READLINE_SOURCE="readline-5.1.tar.gz"
READLINE_URL="ftp://ftp.cwru.edu/pub/bash/$READLINE_SOURCE"
READLINE_SIZE="2030276"
READLINE_SHA1SUM="4b2ee2bc9c6dd1d238c84a58f7e6db173600b850"

READLINE_UCLIBC_PATCH="readline-5.1_uclibc.patch"

# usage: readline_build
readline_build()
{
  if [ "$USE_UCLIBC" ]; then
    apply_patch $READLINE_UCLIBC_PATCH
  fi

  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --disable-static \
              --with-curses
  do_make
}

# usage: readline_install
readline_install()
{
  do_make install
}

# usage: make_readline
make_readline()
{
  make_ncurses

  get_basename $READLINE_SOURCE
  make_package $READLINE_SOURCE $READLINE_URL $READLINE_SIZE $READLINE_SHA1SUM \
               $BASENAME readline_build readline_install
}
