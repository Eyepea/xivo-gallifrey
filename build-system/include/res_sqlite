RES_SQLITE_SOURCE="res_sqlite-1.0rc1.tar.gz"
RES_SQLITE_URL="http://www.proformatique.org/IMG/gz/$RES_SQLITE_SOURCE"
RES_SQLITE_SIZE="75615"
RES_SQLITE_SHA1SUM="27d310a718a6b829d2fc3523ea6c06c66b6080da"

# usage: res_sqlite_build
res_sqlite_build()
{
  do_make CC=gcc
}

# usage: res_sqlite_install
res_sqlite_install()
{
  do_make INSTALL_PREFIX=$SYSROOT install
  install -m 644 $SYSCONFDIR/res_sqlite/res_sqlite.conf $SYSCONF/etc/asterisk
}

# usage: make_res_sqlite
make_res_sqlite()
{
  make_sqlite
  make_asterisk

  use_extended_path
  make_package $RES_SQLITE_SOURCE $RES_SQLITE_URL $RES_SQLITE_SIZE $RES_SQLITE_SHA1SUM \
               "res_sqlite" res_sqlite_build res_sqlite_install
  use_simple_path
}
