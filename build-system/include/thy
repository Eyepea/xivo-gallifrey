THY_SOURCE="thy-0.9.4.tar.gz"
THY_URL="ftp://ftp.bonehunter.rulez.org/pub/thy/stable/$THY_SOURCE"
THY_SIZE="357776"
THY_SHA1SUM="e3bae4f3667f98fbc5fc39dc3f61571b524e5dfd"

THY_ZLIB_PATCH="thy-0.9.4_zlib.patch"

# usage: thy_build
thy_build()
{
  apply_patch $THY_ZLIB_PATCH
  CC=$TARGET-gcc \
  ac_cv_func_malloc_0_nonnull=yes \
  ac_cv_setproctitle_ok=no \
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --sysconfdir=$SYSROOT/etc \
              --enable-file-magic \
              --enable-uname \
              --with-libgnutls-prefix=$SYSROOT/usr \
              --with-libgnutls-extra-prefix=$SYSROOT/usr
  do_make
}

# usage: thy_install
thy_install()
{
  do_make install
  install_rc_script $SYSCONFDIR/thy/thy
  make_conf_file thy/thy.conf /etc/thy 644
}

# usage: make_thy
make_thy()
{
  make_zlib
  make_gnutls

  get_basename $THY_SOURCE
  make_package $THY_SOURCE $THY_URL $THY_SIZE $THY_SHA1SUM \
               $BASENAME thy_build thy_install
}
