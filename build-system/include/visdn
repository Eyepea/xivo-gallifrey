VISDN_SOURCE="visdn-0.15.0.tar.bz2"
VISDN_URL="http://www.visdn.org/download/$VISDN_SOURCE"
VISDN_SIZE="650503"
VISDN_SHA1SUM="dbbeb64996774ccfb6149de1a611b4772b3532f6"

VISDN_UCLIBC_PATCH="visdn-0.15.0_uclibc.patch"

# usage: visdn_build
visdn_build()
{
  apply_patch $VISDN_UCLIBC_PATCH
  autoheader
  aclocal
  autoconf
  automake

  ARCH=$ARCH \
  CROSS_COMPILE=$TARGET- \
  INSTALL_MOD_PATH=$SYSROOT \
  ac_cv_func_malloc_0_nonnull=yes \
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT \
              --disable-dependency-tracking \
              --disable-static \
              --enable-kernel-modules \
              --with-kernel-build=$KERNEL_SOURCE \
              --enable-drivers=hfc-pci \
              --enable-asterisk-modules \
              --with-asterisk-modules=$SYSROOT/usr/lib/asterisk/modules \
              --with-asterisk-includes=$SYSROOT/usr/include \
              --with-asterisk-config=$SYSROOT/etc \
              --disable-pppd-plugin
  do_make ARCH=$ARCH CROSS_COMPILE=$TARGET- INSTALL_MOD_PATH=$SYSROOT
}

# usage: visdn_install
visdn_install()
{
  do_make ARCH=$ARCH CROSS_COMPILE=$TARGET- INSTALL_MOD_PATH=$SYSROOT install
  install_rc_script $SYSCONFDIR/visdn/visdn 16 00
  rm -rf $SYSROOT/etc/visdn
  mkdir -p -m 755 $SYSCONF/etc/visdn
  ln -s /mnt/etc/visdn $SYSROOT/etc/visdn
  install -m 644 $SYSCONFDIR/visdn/device-pci-0000:01:07.0 $SYSCONF/etc/visdn
  install_hotplug_rule $SYSCONFDIR/visdn/visdn.hotplug
  install -m 644 $SYSCONFDIR/visdn/visdn.conf $SYSCONF/etc/asterisk
}

# usage: make_visdn
make_visdn()
{
  make_asterisk

  get_basename $VISDN_SOURCE
  make_package $VISDN_SOURCE $VISDN_URL $VISDN_SIZE $VISDN_SHA1SUM \
               $BASENAME visdn_build visdn_install
}
