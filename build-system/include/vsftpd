VSFTPD_SOURCE="vsftpd-2.0.5.tar.gz"
VSFTPD_URL="ftp://vsftpd.beasts.org/users/cevans/$VSFTPD_SOURCE"
VSFTPD_SIZE="155985"
VSFTPD_SHA1SUM="9b6a079699aaeb01219665acf203c093f94faef0"

VSFTPD_BUILDDEFS_PATCH="vsftpd-2.0.5_builddefs.patch"

# usage: vsftpd_build
vsftpd_build()
{
  apply_patch $VSFTPD_BUILDDEFS_PATCH
  do_make
}

# usage: vsftpd_install
vsftpd_install()
{
  install -m 755 vsftpd $SYSROOT/usr/sbin
  install_rc_script $SYSCONFDIR/vsftpd/vsftpd
  install -m 644 $SYSCONFDIR/vsftpd/vsftpd.conf $SYSROOT/etc
}

# usage: make_vsftpd
make_vsftpd()
{
  make_openssl

  get_basename $VSFTPD_SOURCE
  use_extended_path
  make_package $VSFTPD_SOURCE $VSFTPD_URL $VSFTPD_SIZE $VSFTPD_SHA1SUM \
               $BASENAME vsftpd_build vsftpd_install
  use_simple_path
}
