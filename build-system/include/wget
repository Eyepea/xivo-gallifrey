WGET_SOURCE="wget-1.10.2.tar.gz"
WGET_URL="http://ftp.gnu.org/pub/gnu/wget/$WGET_SOURCE"
WGET_SIZE="1213056"
WGET_SHA1SUM="a258357297959964fd42fed6afa1a4cce9069980"

# usage: wget_build
wget_build()
{
  ./configure --build=$BUILD \
              --host=$TARGET \
              --prefix=$SYSROOT/usr \
              --sysconfdir=$SYSROOT/etc \
              --disable-nls
  do_make
}

# usage: wget_install
wget_install()
{
  do_make install
}

# usage: make_wget
make_wget()
{
  make_openssl

  get_basename $WGET_SOURCE
  make_package $WGET_SOURCE $WGET_URL $WGET_SIZE $WGET_SHA1SUM \
               $BASENAME wget_build wget_install
}
