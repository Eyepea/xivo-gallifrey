# Call make_zaptel() before make_asterisk() so that Asterisk builds
# chan_zap.so.

ZAPTEL_SOURCE="zaptel-1.2.10.tar.gz"
ZAPTEL_URL="http://ftp.digium.com/pub/telephony/zaptel/releases/$ZAPTEL_SOURCE"
ZAPTEL_SIZE="1258750"
ZAPTEL_SHA1SUM="6b69c4822b9cc1dbc48868eb61bc88e3212b7545"

ZAPTEL_XIVO_PATCH="zaptel-1.2.10_xivo.patch"

# usage: zaptel_build
zaptel_build()
{
  apply_patch $ZAPTEL_XIVO_PATCH
  do_make HOSTCC=$TARGET-gcc \
          HOSTAR=$TARGET-ar \
          ARCH=$KERNEL_ARCH \
          KVERS=$KERNEL_VERSION \
          KSRC=$KERNEL_SOURCE \
          DESTDIR=$SYSROOT \
          DYNFS=yes \
          CROSS_COMPILE=$TARGET- \
          linux26
}

# usage: zaptel_install
zaptel_install()
{
  do_make HOSTCC=$TARGET-gcc \
          HOSTAR=$TARGET-ar \
          ARCH=$KERNEL_ARCH \
          KVERS=$KERNEL_VERSION \
          KSRC=$KERNEL_SOURCE \
          DESTDIR=$SYSROOT \
          DYNFS=yes \
          CROSS_COMPILE=$TARGET- \
          install
  install_rc_script $SYSCONFDIR/zaptel/zaptel 15 00
  rm -f $SYSROOT/etc/zaptel.conf
  make_conf_file zaptel/zaptel.conf /etc 644
  install_hotplug_rule $SYSCONFDIR/zaptel/zaptel.hotplug
}

# usage: make_zaptel
make_zaptel()
{
  get_basename $ZAPTEL_SOURCE
  make_package $ZAPTEL_SOURCE $ZAPTEL_URL $ZAPTEL_SIZE $ZAPTEL_SHA1SUM \
               $BASENAME zaptel_build zaptel_install
}
