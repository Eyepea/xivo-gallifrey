ZLIB_SOURCE="zlib-1.2.3.tar.gz"
ZLIB_URL="http://switch.dl.sourceforge.net/sourceforge/libpng/$ZLIB_SOURCE"
ZLIB_SIZE="496597"
ZLIB_SHA1SUM="60faeaaf250642db5c0ea36cd6dcc9f99c8f3902"

zlib_build()
{
  ./configure --prefix=$SYSROOT/usr --shared
  do_make
}

zlib_install()
{
  do_make install
}

make_zlib()
{
  get_basename $ZLIB_SOURCE
  use_extended_path
  make_package $ZLIB_SOURCE $ZLIB_URL $ZLIB_SIZE $ZLIB_SHA1SUM \
               $BASENAME zlib_build zlib_install
  use_simple_path
}
