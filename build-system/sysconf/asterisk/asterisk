set -e

PATH=/sbin:/bin:/usr/sbin:/usr/bin
rundir=/var/run/asterisk
logdir=/var/log/asterisk
libdir=/var/lib/asterisk
spooldir=/var/spool/asterisk
pidfile=$rundir/asterisk.pid
ctlfile=$rundir/asterisk.ctl
binpath=/usr/sbin/asterisk
user=asterisk
group=asterisk

test -x $binpath || exit 0

# usage: running <pidfile>
running()
{
  if [ -f "$1" ]; then
    return 0
  fi

  return 1
}

start_asterisk()
{
  echo -n "starting asterisk... "
  if ! running $pidfile; then
    for dir in $rundir $logdir $libdir $spooldir; do
      mkdir -p $dir
      chown -R $user:$group $dir
    done

    start-stop-daemon -b \
                      -q \
                      -x $binpath \
                      -p $pidfile \
                      -S \
                      -- \
                      -f
    echo "done"
  else
    echo "asterisk already running"
  fi
}

stop_asterisk()
{
  echo -n "stopping asterisk... "
  if running $pidfile; then
    start-stop-daemon -q \
                      -x $binpath \
                      -p $pidfile \
                      -K
    sleep 1
    rm -rf $pidfile $ctlfile
    echo "done"
  else
    echo "asterisk not running"
  fi
}

reload_asterisk()
{
  echo -n "reloading asterisk... "
  if running $pidfile; then
    start-stop-daemon -q \
                      -x $binpath \
                      -p $pidfile \
                      -s 1 \
                      -K
    echo "done"
  else
    echo "asterisk not running"
  fi
}

case "$1" in
  start)
    start_asterisk
    ;;
  stop)
    stop_asterisk
    ;;
  reload)
    reload_asterisk
    ;;
  restart)
    stop_asterisk
    start_asterisk
    ;;
  *)
    echo "usage: $0 {start|stop|reload|restart}"
    exit 1
    ;;
esac

exit 0
