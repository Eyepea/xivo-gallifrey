set -e

PATH=/sbin:/bin:/usr/sbin:/usr/bin
pidfile=/var/run/syslogd.pid
binpath=/sbin/syslogd

test -x $binpath || exit 0

# usage: running <pidfile>
running()
{
  if [ -f "$1" ]; then
    return 0
  fi

  return 1
}

start_syslogd()
{
  echo -n "starting syslogd... "
  if ! running $pidfile; then
    start-stop-daemon --background \
                      --quiet \
                      --exec $binpath \
                      --pidfile $pidfile \
                      --make-pid \
                      --start \
                      -- \
                      -n
    echo "done"
  else
    echo "syslogd already running"
  fi
}

stop_syslogd()
{
  echo -n "stopping syslogd... "
  if running $pidfile; then
    start-stop-daemon --quiet \
                      --exec $binpath \
                      --pidfile $pidfile \
                      --stop
    sleep 1
    rm -f $pidfile
    echo "done"
  else
    echo "syslogd not running"
  fi
}

reload_syslogd()
{
  echo -n "reloading syslogd... "
  if running $pidfile; then
    start-stop-daemon --quiet \
                      --exec $binpath \
                      --pidfile $pidfile \
                      --signal 1 \
                      --stop
    echo "done"
  else
    echo "syslogd not running"
  fi
}

case "$1" in
  start)
    start_syslogd
    ;;
  stop)
    stop_syslogd
    ;;
  reload)
    reload_syslogd
    ;;
  restart)
    stop_syslogd
    start_syslogd
    ;;
  *)
    echo "usage: $0 {start|stop|reload|restart}"
    exit 1
    ;;
esac

exit 0
