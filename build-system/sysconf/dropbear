set -e

PATH=/sbin:/bin:/usr/sbin:/usr/bin
pidfile=/var/run/dropbear.pid
binpath=/usr/sbin/dropbear
rsakeyfile=/etc/dropbear/dropbear_rsa_host_key
dsskeyfile=/etc/dropbear/dropbear_dss_host_key

test -x $binpath || exit 0
export PATH

# usage: running <pidfile>
running()
{
  if [ -f "$1" ]; then
    return 0
  fi

  return 1
}

check_keys()
{
  if [ ! -f $rsakeyfile ]; then
    echo "generating new RSA key..."
    dropbearkey -t rsa -f $rsakeyfile
    echo "done"
  fi

  if [ ! -f $dsskeyfile ]; then
    echo "generating new DSS key..."
    dropbearkey -t dss -f $dsskeyfile
    echo "done"
  fi
}

start_dropbear()
{
  check_keys
  echo -n "starting dropbear... "
  if ! running $pidfile; then
    start-stop-daemon --background \
                      --quiet \
                      --exec $binpath \
                      --pidfile $pidfile \
                      --make-pid \
                      --start \
                      -- \
                      -F
    echo "done"
  else
    echo "dropbear already running"
  fi
}

stop_dropbear()
{
  echo -n "stopping dropbear... "
  if running $pidfile; then
    start-stop-daemon --quiet \
                      --exec $binpath \
                      --pidfile $pidfile \
                      --stop
    rm -f $pidfile
    echo "done"
  else
    echo "dropbear not running"
  fi
}

case "$1" in
  start)
    start_dropbear
    ;;
  stop)
    stop_dropbear
    ;;
  restart)
    stop_dropbear
    start_dropbear
    ;;
  *)
    echo "usage: $0 {start|stop|restart}"
    exit 1
    ;;
esac

exit 0
