# Foundation, Inc., 59 Temple Place, Suite 330, Boston, MA  02111-1307  USA

PATH=/sbin:/bin:/usr/sbin:/usr/bin

echo
echo "System shutdown in progress"
echo

# Don't call /etc/init.d/networking stop so that network is up when
# processes are killed. SSH processes getting killed will close
# connections automatically.
/etc/init.d/vsftpd stop
/etc/init.d/thy stop
/etc/init.d/asterisk stop
/etc/init.d/dropbear stop
/etc/init.d/klogd stop
/etc/init.d/syslogd stop
/etc/init.d/mountfstab stop
/etc/init.d/mountsys stop
