set -e

PATH=/sbin:/bin:/usr/sbin:/usr/bin
conffile=/etc/zaptel.conf

start_zaptel()
{
  echo -n "creating and filling /dev/zap... "
  mkdir /dev/zap
  cd /dev/zap

  # mdev ins't able to fill /dev/zap, it creates /dev/zapxxx files.
  for i in $(seq 32) ctl channel timer pseudo; do
    ln -s /dev/zap$i $i
  done

  echo "done"

  echo "configuring the Zaptel driver from $conffile..."
  ztcfg -c $conffile || true
  echo "done"
}

case "$1" in
  start)
    start_zaptel
    ;;
  stop)
    :
    ;;
  *)
    echo "usage: $0 {start|stop (ignored)}"
    exit 1
    ;;
esac

exit 0
