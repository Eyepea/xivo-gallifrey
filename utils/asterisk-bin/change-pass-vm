import sys
from xivo import xivo_helpers

if len(sys.argv) != 4:
    raise ValueError, "Missing args!"

cursor = xivo_helpers.db_connect().cursor()
cursor.query("UPDATE voicemail "
             "SET password = %s "
             "WHERE context = %s "
             "AND mailbox = %s",
             parameters = (sys.argv[3], sys.argv[1], sys.argv[2]))
xivo_helpers.db_close()
