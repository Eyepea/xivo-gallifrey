<?php

if(($path_root = realpath(dirname(__FILE__).'/../')) === false)
	die('ERR : DOCUMENT ROOT DIRECTORY NOT FOUND');

if(!(is_dir($path_root) && is_readable($path_root)))
	die('ERR : DOCUMENT ROOT DIRECTORY NOT FOUND OR UNREADABLE');

if(($path_init = realpath('../init/')) === false)
	die('ERR : INIT DIRECTORY NOT FOUND');

$inif_xivo = $path_init.'/xivo.ini';

if(!(is_file($inif_xivo) && is_readable($inif_xivo)))
	die('ERR : INIT FILE XIVO NOT FOUND OR UNREADABLE');

$inia_xivo = parse_ini_file($inif_xivo,true);

if(!(is_array($inia_xivo) && isset($inia_xivo['xivo'])))
	die('ERR : WRONG INIT FILE XIVO');

define('XIVO_PATH_ROOT',$path_root);

?>
